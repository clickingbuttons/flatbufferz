
enum Color:ubyte (bit_flags) {
  Red = 0,
  Green,
  Blue = 3,
}

enum Equipment:ubyte  {
  NONE = 0,
  Weapon = 1,
}

struct Vec3 (force_align: 8) {
  x:float;
  y:float;
  z:float;
}

table Monster {
  pos:Vec3 (id: 0);
  mana:short = 150 (id: 1);
  hp:short = 100 (id: 2);
  name:string (id: 3, key);
  inventory:[ubyte] (id: 4);
  color:Color = Blue (id: 5);
  weapons: [Weapon] (id: 6);
  equipped: Equipment (id: 7);
}

table Weapon {
  name: string;
  damage: short;
}